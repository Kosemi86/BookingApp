<!-- res/layout/user_details_item.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Add ImageButton for delete action within each item -->
    <ImageButton
        android:id="@+id/btnDeleteItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_delete"
        android:background="?android:selectableItemBackground"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/userNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="138dp"
        android:layout_toStartOf="@id/btnDeleteItem"
        android:text="Name: " />

    <TextView
        android:id="@+id/userEmailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userNameTextView"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="144dp"
        android:layout_toStartOf="@id/btnDeleteItem"
        android:text="Email: " />

    <TextView
        android:id="@+id/userMobileTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userEmailTextView"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="137dp"
        android:layout_toStartOf="@id/btnDeleteItem"
        android:text="Mobile: " />

    <TextView
        android:id="@+id/userPasswordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userMobileTextView"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="123dp"
        android:layout_toStartOf="@id/btnDeleteItem"
        android:text="Password: " />

</RelativeLayout>
